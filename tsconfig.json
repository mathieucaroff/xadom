{
    "include": ["src"],
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "types": ["intern"],
        "target": "es2019",
        "module": "esnext",
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "incremental": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "strict": true
    }
}
